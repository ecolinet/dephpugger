#!/usr/bin/env php
<?php

define('DIRNAME', dirname(__DIR__));

$autoloads = [
    DIRNAME . DIRECTORY_SEPARATOR . implode(DIRECTORY_SEPARATOR, ['vendor', 'autoload.php']),
    getcwd() . DIRECTORY_SEPARATOR . implode(DIRECTORY_SEPARATOR, ['vendor', 'autoload.php']),
];

$loaded = false;
foreach($autoloads as $autoload) {
    if(file_exists($autoload)) {
        require_once $autoload;
        $loaded = true;
        break;
    }
}

if(!$loaded) {
    echo "Cannot find autoload.php in folders: \n";
    echo " - {$autoloads[0]}\n";
    echo " - {$autoloads[1]}\n";
    echo 'You must run `composer install` first.';
    exit;
}

function includePaths($arrayOfPaths, &$application=null)
{
    $paths = [];
    foreach($arrayOfPaths as $path) {
        $files = glob($path);
        $paths = array_merge($paths, $files);
    }

    foreach($paths as $path)
    {
        require $path;
    }
}

includePaths([
    DIRNAME . DIRECTORY_SEPARATOR . implode(DIRECTORY_SEPARATOR, ['src', 'Dephpug', '*.php']),
    DIRNAME . DIRECTORY_SEPARATOR . implode(DIRECTORY_SEPARATOR, ['src', 'Dephpug', '**', '*.php']),
    DIRNAME . DIRECTORY_SEPARATOR . implode(DIRECTORY_SEPARATOR, ['src', 'Dephpug', '**', '**', '*.php']),
]);


use Symfony\Component\Console\Application;
use Dephpug\Config;
use Dephpug\Dephpugger;

$application = new Application();

includePaths([
    DIRNAME . DIRECTORY_SEPARATOR . implode(DIRECTORY_SEPARATOR, ['console', '*.php']),
    DIRNAME . DIRECTORY_SEPARATOR . implode(DIRECTORY_SEPARATOR, ['console', 'concerns', '*.php'])
], $application);

function splashScreen($word='Server') {
    $version = 'v' . Dephpugger::$VERSION;
    return <<<EOL
<info>
  _____             _                                       
 |  __ \           | |                                      
 | |  | | ___ _ __ | |__  _ __  _   _  __ _  __ _  ___ _ __ 
 | |  | |/ _ \ '_ \| '_ \| '_ \| | | |/ _` |/ _` |/ _ \ '__|
 | |__| |  __/ |_) | | | | |_) | |_| | (_| | (_| |  __/ |   
 |_____/ \___| .__/|_| |_| .__/ \__,_|\__, |\__, |\___|_|   
             | |         | |           __/ | __/ |          
             |_|         |_|          |___/ |___/           </info>

                                   $word - Version: <fg=cyan>$version</>


EOL;
}

$application->run();
